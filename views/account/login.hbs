<main>
    <header>
        <h1>Login</h1>
        <h4>Login to Choirless to get started with your performance</h4>
    </header>

    <section>

        <form id="loginForm" method="POST" action="/account/login">
            
            <h2>Login to Choirless</h2>
            <input type="text" placeholder="Username" name="username"/>
            <input type="password" placeholder="Password" name="password"/>

            <button type="submit" class="cta-button" id="loginBtn" data-active="true">Login</button>

        </form>

    </section>

</main>