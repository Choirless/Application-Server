<main>
    <header>
        <h1>Join us!</h1>
        <h4>Create an account with Choirless to join our singing community</h4>

    </header>

    <section>

        <form id="loginForm" method="POST" action="/account/create{{#if redirect}}?redirect={{#encodeURL}}{{this.redirect}}{{/encodeURL}}{{/if}}">
            
            <h2>Account Details</h2>
            <input type="text" name="inviteId" value="{{inviteId}}" hidden />
            <input type="text" placeholder="Name" name="name" required/>
            <input type="Email" placeholder="Email Address" name="email" required/>
            <input type="password" placeholder="Password" name="password" required/>
            <input type="password" placeholder="Repeat password" name="repeat_password" required/>
            
            <button type="submit" class="cta-button" id="createAccountBtn" data-active="true">Create Account</button>

        </form>

        <p class="center-text">Already have an account? Great! You can <a href="/account/login">log in here</a>.</p>

        <p class="center-text smaller-text">By creating this account, you are agreeing to our <a class="open-terms">terms &amp; conditions</a>.</p>
        
    </section>

</main>

{{> terms}}